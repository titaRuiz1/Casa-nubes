---
import { services } from '../../data/services.js';
---

<section id="servicios" class="py-10 bg-section-charcoal">
  <div class="mx-auto">
    <!-- Header -->
    <div class="services-header">
      <h2 class="services-title">
        NUESTROS SERVICIOS
      </h2>

    <!-- Services Grid -->
    <div class="services-flex">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon" set:html={service.icon}></div>
          <h3 class="service-title">{service.title}</h3>
          <div class="service-description">{service.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .services-title {
    font-family: Cinzel;
    color: white;
    font-size: 37px;
    font-weight: bold;
    text-transform: none;
    margin-bottom: 1.5rem;
  }

  .services-separator-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .services-separator-line {
    flex: 1;
    height: 2px;
    background-color: white;
    border: none;
    max-width: 100px;
  }

  .services-separator-icon {
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .services-flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin: 0 2%;
  }

  .service-card {
    text-align: center;
    padding: 1rem 0rem;
    width: 340px;
  }

  .service-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .service-icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: white;
  }

  .service-title {
    font-family: Cinzel;
    color: white;
    font-size: 20px;
    font-weight: 500;
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
  }

  .service-description {
    color: var(--color-section-olive-light);
    font-size: 14px;
    font-family: Nunito;
    font-size: 14px;
    text-transform: none;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    .service-icon {
      width: 70px;
      height: 70px;
    }
  }

  @media (max-width: 768px) {
    .services-title {
      font-size: 2rem;
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .service-card {
      padding: 1.5rem 1rem;
    }

    .service-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 1rem;
    }

    .service-title {
      font-size: 1.1rem;
    }

    .service-description {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 640px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .service-card {
      padding: 1.25rem 0.75rem;
    }

    .service-icon {
      width: 50px;
      height: 50px;
    }

    .service-title {
      font-size: 22px;
      margin-bottom: 0.75rem;
    }

    .service-description {
      font-size: 0.8rem;
    }

    .services-title {
      font-size: 1.75rem;
    }


    @media (max-width: 480px) {
      .services-title {
        font-size: 22px;
      }

      .service-title {
        font-size: 16px;
      }
    }
  }
</style>
