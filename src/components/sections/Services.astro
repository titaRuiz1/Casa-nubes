---
import { services } from '../../data/services.js';
---

<section id="servicios" class="py-20 bg-section-charcoal">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header -->
    <div class="services-header">
      <h2 class="services-title">
        NUESTROS SERVICIOS
      </h2>

    <!-- Services Grid -->
    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon" set:html={service.icon}></div>
          <h3 class="service-title">{service.title}</h3>
          <div class="service-description">{service.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .services-title {
    color: white;
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  .services-separator-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .services-separator-line {
    flex: 1;
    height: 2px;
    background-color: white;
    border: none;
    max-width: 100px;
  }

  .services-separator-icon {
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .service-card {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .service-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .service-icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: white;
  }

  .service-title {
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-transform: capitalize;
  }

  .service-description {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    .service-icon {
      width: 70px;
      height: 70px;
    }
  }

  @media (max-width: 768px) {
    .services-title {
      font-size: 2rem;
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .service-card {
      padding: 1.5rem 1rem;
    }

    .service-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 1rem;
    }

    .service-title {
      font-size: 1.1rem;
    }

    .service-description {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 640px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .service-card {
      padding: 1.25rem 0.75rem;
    }

    .service-icon {
      width: 50px;
      height: 50px;
    }

    .service-title {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .service-description {
      font-size: 0.8rem;
    }

    .services-title {
      font-size: 1.75rem;
    }
  }
</style>
