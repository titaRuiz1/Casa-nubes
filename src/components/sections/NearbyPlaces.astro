---
import { getNearbyPlaces } from '../../data/nearbyPlaces.js';

const lang = 'es';
const places = getNearbyPlaces(lang);
---

<section id="lugares-cercanos" class="py-10 bg-section-dark">
  <div class="mx-auto">
    <!-- Header -->
    <div class="nearby-header">
      <h2 class="nearby-title">
        LUGARES CERCANOS
      </h2>

    <!-- Places Grid -->
    <div class="nearby-grid">
      {places.map((place) => (
        <div class="nearby-card">
          <div class="nearby-image-wrapper" style={`background-image: url(${place.image})`}>
            <div class="nearby-overlay">
              <h3 class="nearby-place-title">{place.name}</h3>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .nearby-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .nearby-title {
    font-family: Cinzel;
    color: white;
    font-size: 37px;
    font-weight: bold;
    text-transform: none;
    margin-bottom: 1.5rem;
  }

  .nearby-separator-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .nearby-separator-line {
    flex: 1;
    height: 2px;
    background-color: white;
    border: none;
    max-width: 100px;
  }

  .nearby-separator-icon {
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nearby-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
  }

  .nearby-card {
    position: relative;
    overflow: hidden;
  }

  .nearby-image-wrapper {
    width: 100%;
    height: 400px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .nearby-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
    padding: 3rem 1.5rem 2rem;
    display: flex;
    align-items: flex-end;
  }

  .nearby-place-title {
    color: white;
    font-size: 40px;
    font-family: Nunito;
    font-weight: 700;
    text-transform: none;
    margin: 0;
    line-height: 1.2;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nearby-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .nearby-image-wrapper {
      height: 350px;
    }
  }

  @media (max-width: 768px) {
    .nearby-title {
      font-size: 2rem;
    }

    .nearby-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .nearby-image-wrapper {
      height: 300px;
    }

    .nearby-place-title {
      font-size: 1.25rem;
    }

    .nearby-overlay {
      padding: 2rem 1rem 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .nearby-grid {
      grid-template-columns: 1fr;
    }

    .nearby-image-wrapper {
      height: 350px;
    }

    .nearby-title {
      font-size: 28px;
    }
  }

  @media (max-width: 480px) {
    .nearby-title {
      font-size: 22px;
    }
  }
</style>
