<header class="site-header">
  <div class="header-container">
    <h1 class="site-title">La Casa del Bosque de Nubes</h1>
    <button class="hamburger" aria-label="Menú" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <nav class="nav">
      <ul class="menu" role="list">
        <li><a href="/">INICIO</a></li>
        <li><a href="/nuestra-casa">NUESTRA CASA</a></li>
        <li><a href="/contacto">CONTACTO</a></li>
        <li><a href="/habitacion-gatmalap">HABITACIÓN GATMALAP</a></li>
        <li><a href="/habitacion-pirka">HABITACIÓN PIRKA</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: transparent;
  }

  .header-container {
    max-width: var(--container);
    margin: 0 auto;
    padding: var(--space-4) var(--space-4);
    text-align: center;
    position: relative;
  }

  .site-title {
    font-weight: 500;
    letter-spacing: 0.05em;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    margin: 0 0 var(--space-4) 0;
    text-transform: uppercase;
    margin-top: 16px;
  }

  /* Botón hamburguesa */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 8px;
    position: absolute;
    right: var(--space-1);
    top: 60%;
    transform: translateY(-50%);
    z-index: 102;
  }

  .hamburger span {
    display: block;
    width: 30px;
    height: 3px;
    background: white;
    transition: all 0.3s ease;
    box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(135deg) translate(20px, 8px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-135deg) translate(20px, -7px);
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .menu {
    display: flex;
    gap: clamp(1rem, 1vw, 2.5rem);
    list-style: none;
    margin: 0;
    padding: 24px 0px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .menu a {
    font-family: Cinzel;
    color: white;
    text-decoration: none;
    font-size: 21px;
    font-weight: 400;
    font-style: normal;
    text-transform: uppercase;
    transition: all 0.3s ease;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
    position: relative;
  }

  .menu a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: white;
    transition: width 0.3s ease;
  }

  .menu a:hover {
    opacity: 1;
  }

  .menu a:hover::after,
  .menu a[aria-current="page"]::after {
    width: 100%;
  }

  /* Menu hamburguesa responsive */
  @media (max-width: 990px) {
    .hamburger {
      display: flex;
    }

    .header-container {
      padding: var(--space-3) var(--space-4);
    }

    .site-title {
      margin-bottom: 0;
      font-size: 1.25rem;
    }

    .nav {
      position: fixed;
      top: 0;
      right: -100%;
      width: 280px;
      height: 100vh;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      transition: right 0.3s ease;
      z-index: 101;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav.active {
      right: 0;
    }

    .menu {
      flex-direction: column;
      gap: var(--space-6);
      padding: var(--space-8);
      align-items: center;
    }

    .menu a {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: var(--space-3) var(--space-3);
    }

    .site-title {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .site-title {
      font-size: 1rem;
    }

    .nav {
      width: 100%;
    }
  }
</style>

<script>
  const hamburger = document.querySelector('.hamburger');
  const nav = document.querySelector('.nav');
  const menuLinks = document.querySelectorAll('.menu a');

  hamburger?.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    nav?.classList.toggle('active');

    // Actualizar aria-expanded
    const isExpanded = hamburger.classList.contains('active');
    hamburger.setAttribute('aria-expanded', isExpanded.toString());
  });

  // Cerrar menú al hacer click en un enlace
  menuLinks.forEach(link => {
    link.addEventListener('click', () => {
      hamburger?.classList.remove('active');
      nav?.classList.remove('active');
      hamburger?.setAttribute('aria-expanded', 'false');
    });
  });

  // Cerrar menú al hacer click fuera
  document.addEventListener('click', (e) => {
    if (!nav?.contains(e.target as Node) && !hamburger?.contains(e.target as Node)) {
      hamburger?.classList.remove('active');
      nav?.classList.remove('active');
      hamburger?.setAttribute('aria-expanded', 'false');
    }
  });
</script>
