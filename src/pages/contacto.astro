<style>
  .hero-page {
    position: relative;
    height: 50vh;
    min-height: 350px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(46, 41, 37, 0.5) 0%,
      rgba(46, 41, 37, 0.7) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 2rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
  }

  .map-wrapper {
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .map-placeholder {
    width: 100%;
    height: 450px;
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .map-icon {
    font-size: 5rem;
    opacity: 0.5;
  }

  .map-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .map-subtext {
    color: var(--color-light-text);
  }

  .direction-step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: var(--color-accent);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .step-text {
    color: var(--color-light-text);
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .map-placeholder {
      height: 300px;
    }

    .direction-step {
      gap: 1rem;
    }

    .step-number {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1rem;
    }
  }
</style>
