---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Welcome from '../components/sections/Welcome.astro';
import Gallery from '../components/sections/Gallery.jsx';
import NearbyPlaces from '../components/sections/NearbyPlaces.astro';
import Services from '../components/sections/Services.astro';
import Contact from '../components/sections/Contact.astro';
import { images } from '../data/images.js';
import { Form } from './contacto2';
---

<Layout
  title="La Casa del Bosque de Nubes - Alojamiento en Gocta, Amazonas"
  description="Un refugio custodiado por la catarata de Gocta en medio del bosque nuboso. Despierta en esta montaña Chachapoya, tierra de aventuras y misticismo."
>
  <Header />

  <main>
    <!-- Hero Section - Foto principal tamaño completo -->
    <Hero />

    <!-- Sección Bienvenidos -->
    <Welcome />

    <!-- Galería -->
    <Gallery images={images.gallery} client:load />

    <!-- Lugares Cercanos -->
    <NearbyPlaces />

    <!-- Nuestros Servicios -->
    <Services />

    <!-- Formulario de Contacto -->
    <Contact />
    <Form client:load />
  </main>

  <Footer />
</Layout>
